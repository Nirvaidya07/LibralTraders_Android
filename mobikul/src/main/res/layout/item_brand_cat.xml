<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <import type="android.view.View" />

        <import type="com.webkul.mobikul.helpers.AppSharedPref" />
        <variable
            name="item"
            type="com.webkul.mobikul.models.catalog.BrandCategoryResponseModel" />

        <variable
            name="handler"
            type="com.webkul.mobikul.handlers.BrandsRvHandler" />
        <variable
            name="data"
            type="com.webkul.mobikul.handlers.BrandCategoryViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:background="@color/material_surface"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_normal">

        <TextView
            fontPath="fonts/Montserrat-SemiBold.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{item.value}"
            android:textAllCaps="true"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_medium" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@{AppSharedPref.getStoreCode(context).equals(&quot;ar&quot;) ? @drawable/ic_left_arrow_accent : @drawable/ic_right_arrow_accent}" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
